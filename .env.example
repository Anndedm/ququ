# 可选：设置语言偏好
LANGUAGE=zh-CN

# 可选：调试模式
DEBUG=false

# 可选：日志级别
LOG_LEVEL=info

# 可选：音频处理设置
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1
AUDIO_FORMAT=wav

# 可选：FunASR模型配置
FUNASR_MODEL_DIR=./models
FUNASR_CACHE_DIR=./cache

# 可选：性能设置
MAX_RECORDING_DURATION=300
MAX_TEXT_LENGTH=10000
BATCH_SIZE=300

# 可选：热词配置（用逗号分隔）
HOTWORDS=

# 可选：代理设置
HTTP_PROXY=
HTTPS_PROXY=

# 可选：数据存储
DATABASE_PATH=./data/transcriptions.db
BACKUP_ENABLED=true
BACKUP_INTERVAL=24

# 可选：UI设置
THEME=auto
WINDOW_ALWAYS_ON_TOP=false
START_MINIMIZED=false

# 可选：快捷键
GLOBAL_HOTKEY=CommandOrControl+Shift+Space